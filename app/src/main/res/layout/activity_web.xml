<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical"
    android:id="@+id/mWebContainer"
    android:fitsSystemWindows="true"
    android:background="@color/common_white">
    <com.xilaida.mvvmlibrary.widgets.HeaderBar
        android:id="@+id/mHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headBackground="@color/common_white"
        app:backIcon="@mipmap/back_black"
        />
    <ProgressBar
        android:id="@+id/mLoadingPb"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/loading_progress_bg"
        android:max="100"
        android:progress="0"/>
    <WebView
        android:id="@+id/mWebView"
        style="@style/MatchMatch"/>
</LinearLayout>
