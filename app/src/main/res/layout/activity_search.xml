<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mSearchSmartRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.xilaida.mvvmlibrary.widgets.HeaderBar
            android:id="@+id/mSearchHeadBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isShowBack="true"
            app:titleText="搜索"
            app:titleTextColor="@color/common_white"
            app:headBackground="@color/common_blue"/>
        <include
            android:id="@+id/mSearchEtn"
            layout="@layout/include_search_container_layout"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mSearchRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_margin"/>
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
