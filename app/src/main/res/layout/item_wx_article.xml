<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_white"
    android:paddingBottom="@dimen/common_margin">

    <TextView
        android:id="@+id/mWxArticleTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/common_margin"
        android:textSize="@dimen/text_big_size"
        android:textColor="@color/text_light_dark"
        android:textStyle="bold"
        android:lineSpacingExtra="3dp"
        android:text="标题"
        app:layout_constraintEnd_toStartOf="@+id/mWxArticleLoveIv"/>

    <TextView
        android:id="@+id/mWxArticleTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mWxArticleTitleTv"
        android:textColor="@color/text_normal"
        android:layout_marginTop="@dimen/common_margin"
        app:layout_constraintStart_toStartOf="@+id/mWxArticleTitleTv"
        android:textSize="@dimen/text_middle_size"/>

    <ImageView
        android:id="@+id/mWxArticleLoveIv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@+id/mWxArticleTitleTv"
        app:layout_constraintBottom_toBottomOf="@+id/mWxArticleTimeTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/common_margin"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_no_like"/>

</androidx.constraintlayout.widget.ConstraintLayout>
